<style>
    .profile-container {
        width: 100%;
        max-width: 55rem;
    }
    .profile-info {
        display: flex;
        margin-top: 2rem;
    }

    .profile-picture {
        padding: 0 5rem 5rem 2rem;
    }
    
    .profile-picture img {
        width: 9.375rem;
        height: 9.375rem;
        border-radius: 5rem;
    }

    .profile-name-buttons {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .profile-name-buttons span {
        font-weight: 600;
    }

    .follow {
        margin-left: auto;
        padding: .35rem 1.25rem;
        color: white;
        font-size: .9rem;
        background-color: rgb(0, 149, 246);
        border-radius: .5rem;
    }

    .account-info {
        min-width: 20rem;
        margin-top: 1rem;
        display: flex;
        justify-content: space-between;
    }

    .presentation {
        margin-top: 3rem;
    }

    .posts-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-top: 1px solid lightgrey;
    }

    .posts-text {
        width: min-content;
        height: 3rem;
        display: flex;
        align-items: center;
    }

    .posts {
        width: 100%;
        max-width: 60.75rem;
        display: flex;
        flex-wrap: wrap;
    }

    .post {
        padding: .125rem;
        flex-basis: 33.3%;
        max-width: 33%;
    }

    .post img {
        width: 100%;
    }
</style>

<div class="profile-container">
    <div class="profile-info">
        <div class="profile-picture">
            <img src="https://placehold.co/150x150" alt="">
        </div>
        <div>
            <div class="profile-name-buttons">
                <span><%= user.user.username %></span>
                <a class="follow">
                    <span><b>Follow</b></span>
                </a>
            </div>
            <div class="account-info">
                <span><b>x</b> posts</span>
                <span><b>x</b> followers</span>
                <span><b>x</b> following</span>
            </div>
            <div class="presentation">
                <span><%= user.user.presentation %></span>
            </div>
        </div>
    </div>
    <div class="posts-container">
        <div class="posts-text">
            <svg aria-label="" fill="currentColor" height="12" role="img" viewBox="0 0 24 24" width="12"><rect fill="none" height="18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="18" x="3" y="3"></rect><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="9.015" x2="9.015" y1="3" y2="21"></line><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="14.985" x2="14.985" y1="3" y2="21"></line><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="21" x2="3" y1="9.015" y2="9.015"></line><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="21" x2="3" y1="14.985" y2="14.985"></line></svg>
            <span style="margin-left: .3rem;font-weight: bold;font-size: .9rem;">POSTS</span>
        </div>
        <div class="posts">
            <% user.posts.forEach(post => { %>
                <div class="post">
                    <a href="/posts/<%= post.id %>">
                        <img src="data:image/png;base64,<%= post.images[0].image %>" alt="<%= post.id %>">
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</div>